{
  "name": "firefly",
  "version": "1.0.0",
  "description": "Personal Project",
  "author": "Angela Kravcevich",
  "license": "",
  "private": true,
  "dependencies": {
    "bower": "^1.3.1",
    "http-server": "^0.6.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "serve-static": "^1.8.1",
    "shelljs": "^0.2.6"
  },
  "engines": {
    "node": ">= 0.10.21"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "concurrently \"http-server -a localhost -p 8000 -c-1\" \"npm run watch:sass\"",
    "build:sass": "node-sass sass/ -o app/styles",
    "watch:sass": "npm run build:sass && node-sass sass/ -wo app/styles"
   }
}
